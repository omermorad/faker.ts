{
  "name": "mockingbird-ts",
  "version": "1.1.0-next.1",
  "license": "MIT",
  "description": "Super Simple, Yet Powerful, TypeScript Library for Creating Mocks. Mockingbird allows you to create class mocks like a breeze with a simple yet powerful @Mock decorator",
  "keywords": [
    "faker",
    "faker-typescript",
    "typescript-faker",
    "typescript-mocks",
    "faker-unit-tests",
    "mockingbird-ts",
    "unit-test",
    "unit-test-mocks",
    "testing-mocks",
    "testing"
  ],
  "contributors": [
    {
      "name": "Omer Morad",
      "email": "omer.moradd@gmail.com"
    },
    {
      "name": "Idan Ptichi",
      "email": "idanpt@gmail.com"
    },
    {
      "name": "Amit Wagner",
      "email": "wagner.amit@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/omermorad/mockingbird-ts.git"
  },
  "bugs": {
    "url": "https://github.com/omermorad/mockingbird-ts/issues"
  },
  "readme": "https://github.com/omermorad/mockingbird-ts/README.md",
  "scripts": {
    "prebuild": "npx rimraf dist",
    "postinstall": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json --watch",
    "test": "npm run lint && jest --runInBand --verbose",
    "test:cov": "jest --runInBand --coverage --collectCoverage=true --reporters=jest-junit",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint '{src,test}/**/*.ts' --fix"
  },
  "files": [
    "dist",
    "index.d.ts",
    "index.js",
    "README.md"
  ],
  "peerDependencies": {
    "@types/faker": "^5.0.0 || ^4.0.0",
    "faker": "^5.0.0 || ^4.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "dependencies": {
    "@plumier/reflect": "^1.0.0-rc.5",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@types/faker": "^5.5.6",
    "@types/jest": "24.9.0",
    "@types/node": "^12.20.15",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^5.5.3",
    "husky": "^7.0.1",
    "jest": "24.9.0",
    "jest-junit": "12.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^17.4.4",
    "semantic-release-cli": "^5.4.3",
    "ts-jest": "24.1.0",
    "ts-loader": "^6.2.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext .ts --fix"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
